@using ProductCatalog.Entity;
@model Product
@{
    ViewBag.Title = "Details";
}

<div class="row pt-3">
    <div class="col-md-6">
        <img src="/theme/img/camera.jpg" class="img-fluid rounded">
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <h1>@Model.Name</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <span class="badge bg-primary">In Stock</span>
                <span class="product-number">#235626</span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                <div id="description">
                    @Model.Description
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-4">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star-half-alt"></i>
                <span class="badge bg-success">53</span>
            </div>
            <div id="write-review" class="col-md-4">
                <a href="#">Write a review</a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <h4 id="product-price">$ @Model.Price</h4>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                <button class="btn btn-success">
                    <i class="fas fa-cart-plus"></i>
                    Add to Cart
                </button>
            </div>
        </div>
    </div>
</div>

