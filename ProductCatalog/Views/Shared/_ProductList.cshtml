@using ProductCatalog.Models
@model IEnumerable<ProductModel>


<div class="row row-cols-1 row-cols-md-3 g-4">

    @foreach (var urun in Model)
    {
        <div class="col mb-2">
            <div class="card h-100">
                <img src="/Upload/@urun.Image" class="card-img-top" alt="@urun.Name">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/Home/Details/@urun.Id">@urun.Name</a>
                    </h5>
                    <p class="card-text pt-2">@urun.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted product-price">
                        <i class="fas fa-lira-sign"></i> 
                        @urun.Price
                    </small>
                    <a href="/Home/Details/@urun.Id" class="btn btn-default btn-sm float-end btn-productView">
                        <i class="fas fa-caret-right"></i>
                        Ürünü incele
                    </a>
                </div>
            </div>
        </div>
    }


</div>